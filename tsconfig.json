{
  "compilerOptions": {
    // Default
    "target": "es5", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true, 
    "skipLibCheck": false,
    "baseUrl": "./",

    // Added
    "jsx": "react-jsx",
    "module": "ESNext",  
    "declaration": true,
    "sourceMap": true,
    "declarationDir": "./dist/types", // Diretório onde as declarações serão geradas
    "outDir": "./dist",     
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "paths": {
      "*": ["node_modules/*", "src/*"]  // Adicione caminhos se necessário
    }
  },
 "include": [   
  "src/**/*",
    "src/types"] 
}