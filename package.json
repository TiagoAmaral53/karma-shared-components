{
  "name": "karma-shared-components",
  "version": "0.0.7",
  "description": "Shared library design systems using atomic methodology",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "parse": "tsc --noEmit && npm run format && npm run lint && npm run lint:fix",
    "test": "jest",
    "rollup": "rm -rf dist && tsc && rollup -c && rm -rf dist/types",
    "rollup:watch": "rm -rf dist && tsc && rollup --config --watch && rm -rf dist/types",
    "build": "npm run css:generate && npm run parse && npm run test && npm run rollup",
    "build:watch": "npm run css:generate && npm run parse && npm run test && npm run rollupWatch",
    "outdated": "npm outdated",
    "storybook": "storybook dev -p 6006",
    "css:generate": "npx tailwindcss -i ./src/index.css -o ./src/global.css",
    "css:generate:watch": "npx tailwindcss -i ./src/index.css -o ./src/global.css --watch",
    "build:storybook": "storybook build",
    "start:storybook": "npx http-server storybook-static",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "dependency:status": "npx depcheck",
    "find:deadcode": "ts-prune src/ -u --ignore 'src/lib|.next|src/app/api'",
    "build:dockerfile": "docker build --tag 'karma-storybook' ."
  },
  "keywords": [
    "react",
    "atomic-desing",
    "shared-library",
    "karma-components"
  ],
  "author": "Tiago Amaral",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.25.8",
    "@babel/preset-react": "^7.25.7",
    "@babel/preset-typescript": "^7.25.7",
    "@eslint/js": "^9.12.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.0",
    "@rollup/pluginutils": "^5.1.2",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-onboarding": "^8.3.5",
    "@storybook/blocks": "^8.3.5",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^8.3.5",
    "@storybook/react-vite": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.3.11",
    "autoprefixer": "^10.4.20",
    "babel-core": "^6.26.3",
    "babel-loader": "^9.2.1",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "css-loader": "^7.1.2",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-react": "^7.37.1",
    "glob": "^7.2.3",
    "globals": "^15.11.0",
    "http-server": "^14.1.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lucide-react": "^0.452.0",
    "node-sass": "^9.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.3.3",
    "rollup": "^4.24.0",
    "rollup-plugin-css-modules": "^0.1.2",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-scss": "^4.0.0",
    "sass": "^1.79.5",
    "sass-loader": "^16.0.2",
    "shadcn-ui": "^0.9.2",
    "storybook": "^8.3.5",
    "style-loader": "^4.0.0",
    "tailwind-merge": "^2.5.3",
    "tailwindcss": "^3.4.13",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.2.5",
    "ts-prune": "^0.10.3",
    "tslib": "^2.7.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  }
}
